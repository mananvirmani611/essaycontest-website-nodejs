}

#blink {
  -webkit-animation-name: blinker;
  -webkit-animation-iteration-count: infinite;
  -webkit-animation-duration: 2s;
}

@-webkit-keyframes blinker {
    0% { color: #5B84B1;
          text-shadow: #5B84B1 0px 0px 20px;
          font-size: 500%}
    50% { color: #FC766A;
           text-shadow: #FC766A 0px 0px 20px;
            font-size: 500%;}

    100% { color: #5B84B1;
           text-shadow: #5B84B1 0px 0px 20px;
            font-size: 500%;}
}

h1 {
   -webkit-animation-iteration-count: infinite;
    -webkit-animation-duration: 3s;
    -webkit-animation-name: woosher;
     color: white;
}

@-webkit-keyframes  woosher {
  0% {
    margin-left: 100%;
    width: 300%;
  }
  100% {
    margin-left: 50%;
    width: 100%;
  }
}

.hidden{
  display: none;
}


    </style>

